<commands>
  <!-- If the database does not exist yet, set it up with the provided init files -->
  <xquery>
    if (not(db:exists('timetracking'))) then
      let $evPath := '/srv/basex/webapp/timetracking/evolutions/'
      let $files := for $f in file:list($evPath, false(), '*_init.xml')
        return concat($evPath, $f)
      return db:create('timetracking', $files)
  </xquery>
</commands>
